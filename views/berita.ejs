<%- include('templates/header')-%> <br />

<div class="container-fluid px-5 py-3">
  <div class="col-md-7">
    <div class="h-100 p-5 text-bg-secondary rounded-3">
      <h2>Silahkan Masukkan Berita Sesuai Keinginan</h2>
      <a href="/tambahberita" class="btn btn-outline-light"> Tambah Berita </a>
    </div>
  </div>
</div>
&nbsp <%berita.forEach(function(item) {%>
<div class="p-5 mb-4 bg-light rounded-3">
  <div class="container-fluid py-5">
    <p><img src="../images/<%=item.gambar%>" style="width: 630px; height: 360px" class="rounded mx-auto d-block" alt="<%=item.judul%>" /></p>
    <h1><b><%=item.judul%></b></h1>
    <p><%=item.deskripsi%></p>

    <a href="/baca/<%=item.id%>" class="btn bg-success"> Selengkapnya </a>
      <a href="/deleteberita/<%=item.id %>" class="btn bg-danger"> Hapus </a>
      <a href="/editberita/<%=item.id %>" class="btn bg-warning"> Edit </a>
    </p>
  </div>
</div>
<%});%> <%- include('templates/footer')-%>
